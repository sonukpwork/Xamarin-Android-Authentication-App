<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false">
		<layer-list>
			<item android:right="5dp" android:top="5dp">
				<shape>
					<corners android:radius="2dp" />
					<solid android:color="#D6D6D6" />
				</shape>
			</item>
			<item android:bottom="2dp" android:left="2dp">
				<shape>
					<gradient android:angle="270" android:endColor="#8bbe1b" android:startColor="#8bbe1b"></gradient>
					<stroke android:width="1dp" android:color="#BABABA"></stroke>
					<corners android:radius="4dp" />
					<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
				</shape>
			</item>

		</layer-list>
	</item>
	<item android:state_pressed="true">
		<layer-list>
			<item android:right="5dp" android:top="5dp">
				<shape>
					<corners android:radius="2dp" />
					<solid android:color="#D6D6D6" />
				</shape>
			</item>
			<item android:bottom="2dp" android:left="2dp">
				<shape>
					<gradient android:angle="270" android:endColor="#8bbe1b" android:startColor="#bbee89"></gradient>
					<stroke android:width="1dp" android:color="#BABABA"></stroke>
					<corners android:radius="4dp" />
					<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
				</shape>
			</item>

		</layer-list>
	</item>
</selector>